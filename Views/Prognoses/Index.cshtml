@model List<WeekPrognosis>
@using System.Globalization
@{
    ViewData["Title"] = "Prognoses";
}

<div class="row align-items-center mb-3">
    <div class="col">
        <h2>Overzicht</h2>
    </div>
    <div class="col-auto">
        <a asp-controller="Prognoses" asp-action="CreatePrognosis" class="btn btn-primary d-inline-block">Nieuwe Prognose</a>
    </div>
</div>

@if (!Model.Any())
{
    <!-- Display this alert if there are no prognoses -->
    <div class="alert alert-warning" role="alert">
        Geen prognoses in het systeem.
    </div>
}
else
{
    <div class="table-container">
        <table class="table">
            <thead>
            <tr>
                <th>Week</th>
                <th>
                    <a asp-controller="Prognoses" asp-action="Index" asp-route-OverviewDesc="@(!ViewBag.OverviewDesc)" class="text-dark">
                        Begin datum
                        <img width="18px" height="auto" class="mx-1" src="@Url.Content(ViewBag.ImageUrl)" alt="Arrow"/>
                    </a>
                </th>
                <th>Eind datum</th>
                <th>Acties</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                DateTime startDateTime = item.StartDate.ToDateTime(TimeOnly.MinValue);
                int weekNumber = CultureInfo.CurrentCulture.Calendar.GetWeekOfYear(startDateTime,new CalendarWeekRule(),item.StartDate.DayOfWeek);
                <tr>
                    <td>@weekNumber</td>
                    <td>@item.StartDate</td> 
                    <td>@item.StartDate.AddDays(7)</td> 
                    <td>
                        @if(!(item.StartDate <= DateOnly.FromDateTime(DateTime.Now))){
                            <a asp-controller="prognoses" asp-action="update">
                                <img width="20px" height="auto" class="mx-1" src="~/img/update-icon.svg" alt="Alternate Text" />
                            </a>
                        }
                        <a asp-controller ="prognoses" asp-action="details" asp-route-id="@("" + item.StartDate.Year + "-" + weekNumber)">
                            <img width="20px" height="auto" src="~/img/details-icon.svg" alt="Alternate Text" />
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        
        @if (ViewBag.MaxPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-end px-3">
                    <li class="page-item @(ViewBag.PageNumber == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.PageNumber - 1)" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    @for (int i = 1; i <= ViewBag.MaxPages; i++)
                    {
                    <li class="page-item @(ViewBag.PageNumber == i ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                    }
                    <li class="page-item @(ViewBag.PageNumber == ViewBag.MaxPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.PageNumber + 1)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    </div>
}
