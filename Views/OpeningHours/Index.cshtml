@model List<UniqueDay>
@using System.Globalization
@{
    ViewData["Title"] = "Openingstijden";
}
<h5>Openingstijden en speciale dagen</h5>

<div class=" row">
    <div class=" col-8">
        <!-- here the openinghours come-->
    </div>
    <div class=" col-4">
        @if (false)
        {
            <h3>Speciale dagen</h3>
            <!-- Display this alert if there are unique days -->
            <div class="alert alert-warning" role="alert">
                Geen speciale dagen in het systeem.
            </div>
        }
        else
        {
            <div class=" table-container">
                <table class="table rounded">
                    <thead class="table-light">
                        <tr>
                            <td class="h4 text-center p-3" colspan="4">Speciale dagen</td>
                        </tr>
                        <tr>
                            <td colspan="4">prognose wordt vermenigvuldigd de factor</td>
                        </tr>
                        <tr>
                            <th>Naam</th>
                            <th class="col-5">
                                <a asp-controller="OpeningHours" asp-action="Index" asp-route-OverviewDesc="@(!ViewBag.OverviewDesc)"
                                   asp-route-usePassedDates="@ViewBag.UsePassedDates" aria-label="begin " class="text-decoration-none text-dark d-flex align-items-center">
                                    <div class="me-2">
                                        Startdatum <br /> Einddatum
                                    </div>
                                    <img style="width: 20px; height: auto" src="@Url.Content(ViewBag.ImageUrl)" alt="Arrow" />
                                </a>
                            </th>
                            <th class=" col-3">Factor</th>
                            <th>Acties</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Name;
                                </td>
                                <td class=" col-5">
                                    @item.StartDate <br> 
                                    @item.StartDate.AddDays(7)
                                </td>
                                <td class=" col-3">
                                    @item.Factor
                                </td>
                                <td>
                                    @if (item.StartDate > DateOnly.FromDateTime(DateTime.Now))
                                    {
                                        <a asp-controller="UniqueDays" asp-action="Edit">
                                            <img style="width: 20px; height: auto" src="~/img/Update_Logo.png" alt="Alternate Text" />
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <nav class=" align-content-end" aria-label="">
                    <ul class="d-flex justify-content-end list-unstyled">

                        <!-- if there are previous pages in the list these items will be on screen-->
                        @if (!(ViewBag.PageNumber <= 1))
                        {
                            <li class="page-item">
                                <a class="page-link" asp-controller="OpeningHours" asp-action="index" 
                                asp-route-OverviewDesc="@ViewBag.OverviewDesc" 
                                asp-route-usePassedDates="@ViewBag.UsePassedDates"  aria-label="begin ">
                                    <span aria-hidden="true">&laquo;</span>
                                </a></li>

                            <li class="page-item">
                                <a class="page-link" asp-controller="OpeningHours" asp-action="index" 
                                asp-route-page="@ViewBag.PageNumber - 1 "
                                asp-route-OverviewDesc="@ViewBag.OverviewDesc"
                                asp-route-usePassedDates="@ViewBag.UsePassedDates" aria-label="Previous">
                                    <span aria-hidden="true">&larr;</span>
                                </a> </li>

                            <li class="page-item"><a class="page-link" asp-controller="OpeningHours" asp-action="index" 
                                asp-route-page="@(ViewBag.PageNumber - 1)" 
                                asp-route-OverviewDesc="@ViewBag.OverviewDesc" 
                                asp-route-usePassedDates="@ViewBag.UsePassedDates">@(ViewBag.PageNumber - 1)
                            </a></li>
                        }
                        <!-- shows the current page-->
                        <li class="page-item"><a class="page-link btn-dark" asp-controller="OpeningHours" asp-action="index" 
                            asp-route-page="@ViewBag.PageNumber" 
                            asp-route-OverviewDesc="@ViewBag.OverviewDesc" 
                            asp-route-usePassedDates="@ViewBag.UsePassedDates" >@ViewBag.PageNumber
                            </a></li>

                        <!-- if there are next pages in the list these items will be on screen-->
                        @if (!(ViewBag.PageNumber >= ViewBag.MaxPages))
                        {
                            <li class="page-item"><a class="page-link" asp-controller="OpeningHours" asp-action="index" 
                                asp-route-page="@(ViewBag.PageNumber + 1)" 
                                asp-route-OverviewDesc="@ViewBag.OverviewDesc"
                                asp-route-usePassedDates="@ViewBag.UsePassedDates" >@(ViewBag.PageNumber + 1)
                                </a></li>

                            <li class="page-item">
                                <a class="page-link" asp-controller="OpeningHours" asp-action="index" 
                                asp-route-page="@ViewBag.PageNumber + 1" 
                                asp-route-OverviewDesc="@ViewBag.OverviewDesc" 
                                asp-route-usePassedDates="@ViewBag.UsePassedDates" aria-label="next">
                                    <span aria-hidden="true">&rarr;</span>
                                </a></li>

                            <li class="page-item">
                                <a class="page-link" asp-controller="OpeningHours" asp-action="index" 
                                asp-route-page="@ViewBag.MaxPages" 
                                asp-route-OverviewDesc="@ViewBag.OverviewDesc" 
                                asp-route-usePassedDates="@ViewBag.UsePassedDates"  aria-label="last">
                                    <span aria-hidden="true">&raquo;</span>
                                </a></li>
                        }
                    </ul>
                </nav>
            </div>
        }
        <div class="align-content-between">
            @if (ViewBag.UsePassedDates != 'n')
            {
                <a asp-controller="OpeningHours" asp-action="Index" class="btn btn-primary btn-sm d-inline-block" style="width: fit-content">toekomstige dagen bekijken</a>
            }
            else
            {
                <a asp-controller="OpeningHours" asp-action="Index" asp-route-usePassedDates='y'  class="btn btn-primary btn-sm d-inline-block" style="width: fit-content">oude dagen bekijken</a>
            }
            <a asp-controller="UniqueDays" asp-action="Add" class="btn btn-primary btn-sm d-inline-block" style="width: fit-content">toevoegen</a>
        </div>
    </div>
</div>