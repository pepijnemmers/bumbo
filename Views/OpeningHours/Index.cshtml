@model List<UniqueDay>
@{
    ViewData["Title"] = "Openingstijden";
}
<h5>Openingstijden en speciale dagen</h5>

<div class=" row">
    <div class=" col-8">
        <!-- here the openinghours come-->
    </div>
    <div class=" col-4">
        <div class=" table-container">
            <div class="pt-3 ps-3">
                <h3>Speciale dagen</h3>
                <p>Prognose wordt vermenigvuldigd met de factor</p>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Naam</th>
                        <th class="col-5">
                            <a asp-controller="OpeningHours" asp-action="Index" asp-route-OverviewDesc="@(!ViewBag.OverviewDesc)"
                                asp-route-usePassedDates="@ViewBag.UsePassedDates" aria-label="begin " class="text-decoration-none text-dark d-flex align-items-center">
                                <div class="me-2">
                                    Startdatum <br /> Einddatum
                                </div>
                                <img style="width: 20px; height: auto" src="@Url.Content(ViewBag.ImageUrl)" alt="Arrow" />
                            </a>
                        </th>
                        <th class=" col-3">Factor</th>
                        <th>Acties</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <!-- Display this alert if there are unique days -->
                        <tr>
                            <td colspan="100%" class="text-center">Er zijn geen Speciale dagen</td>
                        </tr>
                    }
                    else{
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Name
                                </td>
                                <td class=" col-5">
                                    @item.StartDate <br> 
                                    @item.EndDate
                                </td>
                                <td class=" col-3">
                                    @item.Factor
                                </td>
                                <td>
                                    @if (item.StartDate > DateOnly.FromDateTime(DateTime.Now))
                                    {
                                        <a asp-controller="UniqueDays" asp-action="Edit" asp-route-id = "@item.Id">
                                            <img style="width: 20px; height: auto" src="~/img/update-icon.svg" alt="Alternate Text" />
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            @if (ViewBag.MaxPages > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-end px-3">
                        <li class="page-item @(ViewBag.PageNumber == 1 ? "disabled" : "")">
                            <a class="page-link" asp-controller="OpeningHours" asp-action="index"
                               asp-route-OverviewDesc="@ViewBag.OverviewDesc"
                               asp-route-usePassedDates="@ViewBag.UsePassedDates" aria-label="begin ">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="page-item @(ViewBag.PageNumber == 1 ? "disabled" : "")">
                            <a class="page-link" asp-controller="OpeningHours" asp-action="index"
                               asp-route-page="@(ViewBag.PageNumber - 1) "
                               asp-route-OverviewDesc="@ViewBag.OverviewDesc"
                               asp-route-usePassedDates="@ViewBag.UsePassedDates" aria-label="Previous">
                                <span aria-hidden="true">&larr;</span>
                            </a>
                        </li>
                        @for (int i = 1; i <= ViewBag.MaxPages; i++)
                        {
                            <li class="page-item @(ViewBag.PageNumber == i ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i"
                                   asp-route-OverviewDesc="@ViewBag.OverviewDesc"
                                   asp-route-usePassedDates="@ViewBag.UsePassedDates">@i</a>
                            </li>
                        }
                        <li class="page-item @(ViewBag.PageNumber == ViewBag.MaxPages ? "disabled" : "")">
                            <a class="page-link" asp-controller="OpeningHours" asp-action="index"
                               asp-route-page="@(ViewBag.PageNumber + 1)"
                               asp-route-OverviewDesc="@ViewBag.OverviewDesc"
                               asp-route-usePassedDates="@ViewBag.UsePassedDates" aria-label="next">
                                <span aria-hidden="true">&rarr;</span>
                            </a>
                        </li>

                        <li class="page-item @(ViewBag.PageNumber == ViewBag.MaxPages ? "disabled" : "")">
                            <a class="page-link" asp-controller="OpeningHours" asp-action="index"
                               asp-route-page="@ViewBag.MaxPages"
                               asp-route-OverviewDesc="@ViewBag.OverviewDesc"
                               asp-route-usePassedDates="@ViewBag.UsePassedDates" aria-label="last">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
        <div class="d-flex justify-content-between">
            @if (ViewBag.UsePassedDates != 'n')
            {
                <a asp-controller="OpeningHours" asp-action="Index" class="btn btn-primary btn-sm d-inline-block">toekomstige dagen bekijken</a>
            }
            else
            {
                <a asp-controller="OpeningHours" asp-action="Index" asp-route-usePassedDates='y'  class="btn btn-primary btn-sm ">oude dagen bekijken</a>
            }
            <a asp-controller="UniqueDays" asp-action="Add" class="btn btn-primary btn-sm">toevoegen</a>
        </div>
    </div>
</div>