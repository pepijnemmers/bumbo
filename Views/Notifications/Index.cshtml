@using BumboApp.Views.Components
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BumboApp.ViewModels.NotificationViewModel

@{
    ViewData["Title"] = "Meldingen";
}

<div class="d-flex align-items-center justify-content-between mb-3 ga-2 flex-wrap">
    <h2>@Model.TotalNotifications meldingen (@Model.TotalUnreadNotifications ongelezen)</h2>
    @if (Model.NotificationsForPage != null && Model.NotificationsForPage.Any(n => !n.HasBeenRead))
    {
        <a asp-action="MarkAllAsRead" asp-controller="Notifications" class="btn btn-primary">Markeer alles als gelezen</a>
    }
</div>

@if (Model.NotificationsForPage != null && Model.NotificationsForPage.Any())
{
    foreach (var notification in Model.NotificationsForPage)
    {
        <div class="card p-3 mb-2">
            <div class="d-block d-md-flex align-items-center justify-content-between gap-2 gap-md-3">
                <div>
                    <span class="text-secondary small">@notification.SentAt.ToString("dd-MM-yyyy HH:mm")</span>
                    <a asp-action="GoToActionUrl" asp-controller="Notifications" asp-route-id="@notification.Id" class="d-flex align-items-center gap-2 text-body mb-2 mt-1">
                        @if (!notification.HasBeenRead)
                        {
                            <i class="fa-solid fa-circle text-danger"></i>
                        }
                        <h3 class="h5 mb-0">@notification.Title</h3>
                    </a>
                    <p class="mb-0">@notification.Description</p>
                </div>
                <div>
                    <div class="d-flex align-items-center gap-1">
                        @if (notification.ActionUrl != null)
                        {
                            <a asp-action="GoToActionUrl" asp-controller="Notifications" asp-route-id="@notification.Id" class="p-2" title="Bekijk details"><img src="/img/details-icon.svg" alt="Details" /></a>
                        }
                        @if (!notification.HasBeenRead)
                        {
                            <a asp-action="MarkAsRead" asp-controller="Notifications" asp-route-id="@notification.Id" class="p-2" title="Markeer als gelezen"><img src="/img/envelope-icon.svg" alt="Mark as read"/></a>
                        }
                        <a asp-action="Delete" asp-controller="Notifications" asp-route-id="@notification.Id" class="p-2" title="Verwijder"><img src="/img/delete-icon.svg" alt="Delete"/></a>
                    </div>
                </div>
            </div>
        </div>
    }
    
    @if (ViewBag.MaxPages > 1)
    {
        <Component type="typeof(Pagination)"
                   render-mode="ServerPrerendered"
                   param-PageNumber="ViewBag.PageNumber"
                   param-MaxPages="ViewBag.MaxPages" />
    }
}
else
{
    <div class="alert alert-info" role="alert">Je hebt geen meldingen.</div>
}