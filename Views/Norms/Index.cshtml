@model List<BumboApp.Models.Norm>
@{
    ViewData["Title"] = "Normeringen";
}
<h5>Normeringen</h5>

<div class="container">
    <div>
        <table class="table norms-table">
            <thead>
                <tr>
                    <th scope="col">Activiteiten</th>
                    <th scope="col">Norm</th>
                </tr>
            </thead>
            <tbody>
                
                @*
                    TODO: correct filteren&limiteren
                *@
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Activity</th>
                            <td>@item.Value <b>@item.NormType</b></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @*
        TODO: Tabel met eerdere normeringen en correct filteren&limiteren
    *@
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Datum</th>
                    <th scope="col">Coli uitladen</th>
                    <th scope="col">Vakken vullen</th>
                    <th scope="col">Kassa</th>
                    <th scope="col">Vers</th>
                    <th scope="col">Spiegelen</th>
                </tr>
            </thead>
            <tbody>

                @if (Model != null && Model.Count > 5)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CreatedAt</td>
                            @*vv Filter on Activity vv*@
                            <td>@item.Value</td>
                            <td>@item.Value</td>
                            <td>@item.Value</td>
                            <td>@item.Value</td>
                            <td>@item.Value</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td>Er zijn geen eerdere normeringen</td>
                    </tr>
                    
                }
            </tbody>
        </table>
    </div>
</div>