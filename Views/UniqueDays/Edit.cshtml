@model UniqueDay
@{
    ViewData["Title"] = "Speciale dag bewerken";
}
<div class="table-container p-3">
    <form method="post" asp-action="Update" onchange="showButton()">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="row">
            <div class="col-12 col-lg">
                <label for="cargoExpected">Naam</label>
                <input type="text" id="cargoExpected" name="ExpectedCargo"
                       value="@Model.Name" class="form-control" required />
            </div>

            <div class="col-12 col-lg">
                <label for="beginDate">StartDatum</label>
                <input type="date" id="bDate" name="Date" class="form-control" onchange="navigateToEdit(this.value)"
                       value="@Model.StartDate.ToString("yyyy-MM-dd")" required />
            </div>
            
            <div class="col-12 col-lg">
                <label for="endDate">EindDatum</label>
                <input type="date" id="eDate" name="Date" class="form-control" onchange="navigateToEdit(this.value)"
                       value="@Model.EndDate.ToString("yyyy-MM-dd")" required />
            </div>

            <div class="col-12 col-lg">
                <label for="factor">Factor</label>
                <input type="number" id="factor" name="Factor"
                       value="@Model.Factor" class="form-control" min="0.1" step=" 0.1" required />
            </div>
        </div>
        <div class="text-end mt-3">
            <a asp-action="Index" asp-controller="OpeningHours" class="btn btn-outline-primary">
                Annuleren
            </a>
            <button type="submit" class="btn btn-primary" disabled>Opslaan</button>
        </div>
    </form>
</div>

<script type="text/javascript">
    function showButton() {
        document.querySelector("button[type='submit']").removeAttribute("disabled");
    }
</script>