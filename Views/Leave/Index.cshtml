@model List<LeaveRequest>
@{
    ViewData["Title"] = "Verlof en ziekmelden";
    var loggedInUser = ViewData["LoggedInUser"] as User;
}

<div class="row align-items-center mb-3">
    <div class="col">
        <h3>Verlof</h3>
    </div>

    <div class="col-auto">
        <a asp-controller="Leave" asp-action="LeaveRequest" class="btn btn-primary d-inline-block">Verlof aanvragen</a>
    </div>
    @* TODO: dit uncommenten als ook de manager view is gedaan
    @if (loggedInUser.Role == Role.Employee)
    {
        <div class="col-auto">
            <a asp-controller="Leave" asp-action="LeaveRequest" class="btn btn-primary d-inline-block">Verlof aanvragen</a>
        </div>
    }  *@
    
</div>

<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>Begin datum</th>
                <th>Eind datum</th>
                <th>Reden</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var request in Model)
                {
                    <tr>
                        <td>@request.StartDate.ToShortDateString()</td>
                        <td>@request.EndDate.ToShortDateString()</td>
                        <td>@request.Reason</td>
                        <td>
                            @switch (request.Status)
                            {
                                case Status.Afgewezen:
                                    <span class="badge rounded-pill bg-danger bg-opacity-10 text-danger d-inline-flex align-items-center">
                                        @request.Status
                                    </span>
                                    break;
                                case Status.Geaccepteerd:
                                    <span class="badge rounded-pill bg-success bg-opacity-10 text-success d-inline-flex align-items-center">
                                        @request.Status
                                    </span>
                                    break;
                                default:
                                    <span class="badge rounded-pill bg-secondary bg-opacity-10 text-secondary d-inline-flex align-items-center">
                                        @request.Status
                                    </span>
                                    break;
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="100%" class="text-center">Er zijn geen verlofverzoeken</td>
                </tr>
            }        
        </tbody>
    </table>
</div>